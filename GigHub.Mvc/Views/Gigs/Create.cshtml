@model GigHub.Mvc.ViewModels.GigFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Add a Gig</h2>

<form asp-action="Create" asp-anti-forgery="true">
  <p class="alert alert-info">All fields are <strong>required</strong>.</p>
  <div class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
      <label asp-for="Venue" class="control-label"></label>
      <input asp-for="Venue" class="form-control" autofocus/>
      <span asp-validation-for="Venue" class="text-danger" />
    </div>
    <div class="form-group">
      <label asp-for="Date" class="control-label"></label>
      <input asp-for="Date" class="form-control" type="date" />
      <span asp-validation-for="Date" class="text-danger" />

    </div>
    <div class="form-group">
      <label asp-for="Time" class="control-label"></label>
      <input asp-for="Time" class="form-control" type="time" />
      <span asp-validation-for="Time" class="text-danger" />
    </div>
    <div class="form-group">
      <label asp-for="Genre" class="control-label"></label>
      <select asp-for="Genre" class="form-control" asp-items="@(new SelectList(Model.Genres, "Id", "Name"))">
        <option></option>
      </select>
      <span asp-validation-for="Genre" class="text-danger" />
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
  </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
