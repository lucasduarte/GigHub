@model GigHub.Mvc.ViewModels.GigFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Add a Gig</h2>

<form asp-action="Create">
  <div class="form-horizontal">
    <h4>Gig</h4>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
      <label asp-for="Venue" class="col-md-2 control-label"></label>
      <div class="col-md-10">
        <input asp-for="Venue" class="form-control" />
        <span asp-validation-for="Venue" class="text-danger" />
      </div>
    </div>
    <div class="form-group">
      <label asp-for="Date" class="col-md-2 control-label"></label>
      <div class="col-md-10">
        <input asp-for="Date" class="form-control" type="date" />
        <span asp-validation-for="Date" class="text-danger" />
      </div>
    </div>
    <div class="form-group">
      <label asp-for="Time" class="col-md-2 control-label"></label>
      <div class="col-md-10">
        <input asp-for="Time" class="form-control" type="time" />
        <span asp-validation-for="Time" class="text-danger" />
      </div>
    </div>
    <div class="form-group">
      <label asp-for="Genre" class="col-md-2 control-label"></label>
      <div class="col-md-10">
        <select asp-for="Genre" class="form-control" asp-items="@(new SelectList(Model.Genres, "Id", "Name"))">
          <option></option>
        </select>
        <span asp-validation-for="Genre" class="text-danger" />
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </div>
  </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
